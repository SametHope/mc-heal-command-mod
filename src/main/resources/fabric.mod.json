		"issues": "https://github.com/SametHope/mc-heal-command-mod/issues"
	},
	"license": "MIT",
	"icon": "assets/heal-command/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"samethope.healcommand.HealCommand"
		]
	},
	"depends": {
		"fabricloader": ">=0.16.10",
